@model Film

    <div class="card mb-3">
        <div class="card-body">
            <div class="row no-gutters">
                <div class="col-md-3">
                    <img src="~/img/@Model.Fotograflar" class="card-img">
                </div>
                <div class="col-md-9">

                    <h5 class="card-title">Film Adı:@Model.FilmAdi</h5>
                    <h6 class="card-text">Fiyat:@Model.Fiyat</h6>

                    <p class="card-text">Konu:@Model.Aciklama</p>
                    <p class="card-text">Süre:@Model.Sure</p>
                    <p class="card-text">Puan:@Model.Puan</p>
                    <p class="card-text">
                        <small class="text-muted">3 days ago</small>
                    </p>

                </div>
            </div>
        </div>
    </div>
