                        <a asp-action="Details"
                   asp-controller="Film"
                   asp-route-id="@item.Id" class="card-link btn btn-info">Detay</a>
                        <a class="card-link btn btn-danger">Sepete Ekle</a>
                    </div>
                </div>
            </div>
        }
    }




