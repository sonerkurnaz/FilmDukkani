@using FilmDukkani.Models.DTOs.Kategoriler
@model IList<Kategori>
<a class="btn btn-primary" asp-action="Create">Yeni Kategori</a>
<table class="table table-hover">
    <thead>
        <tr>
            
            
            <td>Kategori Adı</td>
            <td>Açıklama</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>@item.Id</td>
                <td>@item.KategoriAdi</td>
                <td>@item.Aciklama</td>
                
            </tr>
        }
    </tbody>
</table>
