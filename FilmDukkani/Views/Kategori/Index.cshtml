@model ICollection<Kategori>
<a class="btn btn-primary" asp-action="Create" asp-controller="Kategori">Yeni Kategori</a>
<table class="table table-hover">
    <thead>
        <tr>


            <td>Id</td>
            <td>Kategori Adı</td>
            <td>Açıklama</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.KategoriAdi </td>
                <td>@item.Aciklama</td>
                <td>
                    <a class="btn btn-primary"
                   asp-action="Update"
                   asp-controller="Kategori"
                   asp-route-id="@item.Id"
                    >Güncelle</a>
                    <a class="btn btn-primary" 
                    asp-action="Delete"
                    asp-controller="Kategori"
                    asp-route-id="@item.Id"
                    >Sil</a>
                </td>

            </tr>
        }
    </tbody>
</table>
