@model Kategori

<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/img/@Model.Id" class="card-img">
            </div>
            <div class="col-md-9">

                <h5 class="card-title">@Model.KategoriAdi</h5>
                <h6 class="card-text">
                    @Model.FilmKategori
                </h6>

                <p class="card-text">@Model.Aciklama</p>
                <p class="card-text">
                    <small class="text-muted">3 days ago</small>
                </p>

            </div>
        </div>
    </div>
</div>
