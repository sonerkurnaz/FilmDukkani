@model string

<div class="row">
    <div class="card">
        <div class="card-title">
            <h4>Yeni Rol</h4>
        </div>

        <form asp-action="Create" asp-controller="Role">
            <div class="card-body">
                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" name="Name" class="form-control" placeholder="Rol Adı" />
                </div>

                <div class="form-group">

                    <input type="submit" name="Name" class="btn btn-outline-info" value="Rol Oluştur" />
                    <a class="btn btn-outline-danger" asp-action="Index" asp-controller="Role">Geri Dön</a>
                </div>

            </div>
        </form>
    </div>
</div>