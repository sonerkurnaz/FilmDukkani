@model UserRegisterDto                        
<div class="row">
    
    <div class="col-sm-8">

        <div class="card">
            <div class="register-logo">
                <a asp-action="Index" asp-controller="Home"><b>Film</b>Dükkanı</a>
            </div>

            <div class="card-body">
                <form asp-action="Register" method="post">

                    <div class="form-group">
                        
                        <input asp-for="Adi" class="form-control" placeholder="Ad" />
                        <span asp-validation-for="Adi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        
                        <input asp-for="Soyadi" class="form-control" placeholder="Soyadı" />
                        <span asp-validation-for="Soyadi"  class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        
                        <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" />
                        <span asp-validation-for="KullaniciAdi"  class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        
                        <input asp-for="Email" class="form-control" placeholder="E-Mail" />
                        <span asp-validation-for="Email"  class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        
                        <input asp-for="TCKN" class="form-control" placeholder="TCKN" />
                        <span asp-validation-for="TCKN" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        
                        <input asp-for="Sifre" class="form-control" placeholder="Şifre" />
                        <span asp-validation-for="Sifre"  class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        
                        <input asp-for="SifreTekrar" class="form-control" placeholder="Şifre Tekrar" />
                        <span asp-validation-for="SifreTekrar"  class="text-danger"></span>
                    </div>
                     
                     <div class="form-group">
                     
                        <input type="submit" class="btn btn-success float-right" value="Kayıt Ol" />
                     </div>
                </form>
            </div>
            <div class="card-footer">
                <a asp-action="Login" class="btn btn-block btn-dark">Üye Ol</a>
            </div>
        </div>

    </div>
</div>