<div class="login-box">
  <div class="login-logo">
    <a href="../../index2.html"><b>Film</b>Dükkanı</a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Parola Sıfırlama</p>

      <form asp-action="ForgotPassword" method="post">
        <div class="input-group mb-3">
          <input type="email" class="form-control" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block">Yeni Parola Gönder</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

      <p class="mt-3 mb-1">
        <a asp-action="Login">Giriş Yap</a>
      </p>
      <p class="mb-0">
        <a asp-action="Register" class="text-center">Kayıt Ol</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>