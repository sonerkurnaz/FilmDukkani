@model UserLoginDto

<div class="col-sm-8">
    <div class="card">
        <div class="card-header">
            <h4 class="card-header">Oturumu başlatmak için giriş yapın</h4>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <div class="form-group">
                    @*<label asp-for="KullaniciAdi" class="form-control"></label>*@
                    <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" />
                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Password" class="form-control"></label>*@
                    <input asp-for="Sifre" class="form-control" placeholder="Şifre" />
                    <span asp-validation-for="Sifre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    
                    <input asp-action="Login" type="submit" class="btn btn-success float-right" value="Giriş Yap" />
                </div>
            </form>
        </div>
        <div class="card-footer">
            <a asp-action="Register" class="btn btn-block btn-primary">Kayıt Ol</a>
        </div>
    </div>
</div>